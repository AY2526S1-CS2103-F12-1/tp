<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.TextArea?>
<VBox styleClass="organization-panel" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1" spacing="12" alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
    <Text fx:id="title" styleClass="title" text="Organization Hierarchy" />
    <TextArea fx:id="organizationDetails" styleClass="hierarchy-text" VBox.vgrow="ALWAYS" editable="false">
        <ScrollPane fx:id="organizationScrollPane" styleClass="hierarchy-scroll" VBox.vgrow="ALWAYS" />
    </TextArea>
    <Label fx:id="organizationPanelPlaceholder" styleClass="result-display" />
</VBox>
